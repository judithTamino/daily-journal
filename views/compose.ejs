<%- include('partials/header') -%>
<h2>Compose</h2>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" id="postTitle">
    </div>
    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea type="text" name="postBody" id="postBody" class="form-control" rows="6"></textarea>
    </div>
    <button type="submit" name="btn" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>